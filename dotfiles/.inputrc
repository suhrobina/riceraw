# Configure display the current mode of vi command-line editing
# Default terminal emulator cursor style should be ibeam (bar)
set show-mode-in-prompt on

# Cursor style: steady ibeam
set vi-ins-mode-string \1\e[6 q\2

# Cursor style: steady block
set vi-cmd-mode-string \1\e[2 q\2
